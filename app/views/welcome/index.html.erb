<div id="background">

   <header id="main_header" class="cf">
    <div class="wrapper_wide">
      <%= link_to "LOGO", root_path, id: "logo" %>

      <nav>
        <ul>

          <% unless podcast_signed_in? %>
            <li> <%= link_to "Explore", podcasts_path %> </li>
            <li> <%= link_to "Sign in", new_podcast_session_path %> </li>
            <li> <%= link_to "Create", new_podcast_registration_path %> </li>
          <% else %>
            <li><a href="#">Dashboard</a></li>
            <li> <%= link_to "Explore", podcasts_path %> </li>
            <li> <%= link_to "Sign out", destroy_podcast_session_path, method: :delete %></li>
          <% end %>

        </ul>
      </nav>
    </div>
  </header>

  <div class="wrapper_skinny">
    <h1>Discover new Music & Podcasts, or create your own.</h1>
    <%= link_to "Create", new_podcast_registration_path, class:"button button_highlight" %>

    <%= link_to "Explore", podcasts_path, class: "button button_white" %>

  </div>
</div>
